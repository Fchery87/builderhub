# ============================================================================
# BuilderHub Configuration - Consolidated Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values.
# Never commit .env with real values to version control.
# ============================================================================

# ============================================================================
# InstantDB Configuration (Database & Authentication)
# ============================================================================
INSTANTDB_APP_ID=your_instantdb_app_id_here
INSTANTDB_ADMIN_TOKEN=your_instantdb_admin_token_here

# ============================================================================
# Gemini API Configuration (AI Service)
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# Frontend Configuration (Next.js)
# ============================================================================
# Backend API endpoint for frontend to connect to
NEXT_PUBLIC_API_URL=http://localhost:8000

# InstantDB App ID exposed to frontend (same as INSTANTDB_APP_ID above)
NEXT_PUBLIC_INSTANTDB_APP_ID=your_instantdb_app_id_here

# ============================================================================
# Backend Configuration (FastAPI)
# ============================================================================
# JWT Secret key for authentication token signing/verification (generate new in production!)
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars

# Backend server port
BACKEND_PORT=8000

# Environment mode (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# Database Configuration
# ============================================================================
# InstantDB is used as primary database (configured above)
DATABASE_URL=instantdb

# ============================================================================
# Application Settings
# ============================================================================
# App name
APP_NAME=BuilderHub

# Version
APP_VERSION=0.1.0

# Debug mode (set to false in production)
DEBUG=true